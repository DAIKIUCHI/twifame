
<% provide(:title, "コメント") %>
<div class="form-group">
  <%= form_for(@tweet) do |f| %>
    <p><%= f.text_area :comment, rows:"5", class:"form-control" %></p>
    <p><%= f.submit "ツイートする", class: "btn btn-info btn-lg btn-block"%></p>
    <p>
      <h5>フレームを選択してね⬇</h5>
      <label><%= f.radio_button :image, "./app/assets/images/test1.png" %><%= image_tag "icon1.png", id:"icon" %></label>
      <label><%= f.radio_button :image, "./app/assets/images/test2.png" %><%= image_tag "icon2.png", id:"icon" %></label>
      <label><%= f.radio_button :image, "./app/assets/images/test3.png" %><%= image_tag "icon3.png", id:"icon" %></label>
    </p>
    <p>
      <%= image_tag "test1.png", class:"center-block", id:"test1", style:"display: none;" %>
      <%= image_tag "test2.png", class:"center-block", id:"test2", style:"display: none;" %>
      <%= image_tag "test3.png", class:"center-block", id:"test3", style:"display: none;" %>
    </p>
  <% end %>
</div>

<!-- ここからjQuery -->
<script>
$('#tweet_image_appassetsimagestest1png').on('click', function() {
  $("#test1").show();
  $("#test2").hide();
  $("#test3").hide();
});
$('#tweet_image_appassetsimagestest2png').on('click', function() {
  $("#test2").show();
  $("#test1").hide();
  $("#test3").hide();
});
$('#tweet_image_appassetsimagestest3png').on('click', function() {
  $("#test3").show();
  $("#test1").hide();
  $("#test2").hide();
});
</script>
